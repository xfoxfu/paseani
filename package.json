{
  "name": "paseani",
  "type": "module",
  "version": "1.0.0",
  "description": "Parser for animation torrent titles and filenames",
  "private": true,
  "main": "src/lib.ts",
  "scripts": {
    "build": "concurrently 'pnpm:build:*' --group",
    "build:ts": "tsc",
    "build:tailwind": "tailwindcss -o public/style.css",
    "test": "c8 --all --src src ava",
    "test:watch": "ava --watch",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:prettier": "prettier --ignore-unknown --check 'src/**/*'",
    "lint": "concurrently 'pnpm:lint:*' --group",
    "format": "prettier --ignore-unknown --write 'src/**/*'",
    "start": "node dist/main.js",
    "start:dev": "tsx watch src/main.ts"
  },
  "keywords": [],
  "author": "Yuze Fu <i@xfox.me>",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/infobox-parser": "^3.3.4",
    "@types/koa": "^2.15.0",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.24",
    "@types/opencc-js": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "ava": "^6.1.2",
    "c8": "^9.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "ts-tqdm": "^0.8.6",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@koa/router": "^12.0.1",
    "fast-xml-parser": "^4.3.5",
    "jszip": "^3.10.1",
    "koa": "^2.15.0",
    "koa-static": "^5.0.0",
    "ky": "^1.2.2",
    "lodash": "^4.17.21",
    "opencc-js": "^1.0.5",
    "tslog": "^4.9.2"
  },
  "prettier": {
    "printWidth": 120,
    "quoteProps": "consistent",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrderSortSpecifiers": true
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  }
}
