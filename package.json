{
  "name": "paseani",
  "type": "module",
  "version": "1.0.0",
  "description": "Parser for animation torrent titles and filenames",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "test:watch": "ava --watch",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:prettier": "prettier --ignore-unknown --check 'src/**/*'",
    "lint": "concurrently 'pnpm:lint:*' --group",
    "format": "prettier --ignore-unknown --write 'src/**/*'",
    "start": "tsx watch src/index.ts"
  },
  "keywords": [],
  "author": "Yuze Fu <i@xfox.me>",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/infobox-parser": "^3.3.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.7",
    "@types/opencc-js": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "ava": "^6.0.1",
    "c8": "^9.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "ts-tqdm": "^0.8.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "ky": "^1.2.0",
    "lodash": "^4.17.21",
    "opencc-js": "^1.0.5",
    "tslog": "^4.9.2"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrderSortSpecifiers": true
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  }
}
